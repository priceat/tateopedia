<h2>Shared Wikis</h2>

<h3>My Created Wikis</h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date Created</th>
      <th>Last Updated</th>
      <th>Updated By</th> 
      <th colspan="<%= @colspan %>"></th>
      <th colspan="<%= @colspan %>"></th>
      <th colspan="<%= @colspan %>"></th>
    </tr>
  </thead>
<tbody>
    <% @wikis.each do |wiki| %>
      <tr>
        <td><%= link_to wiki.title, wiki %></td>
        <td><%= time_ago_in_words(wiki.created_at) %> ago</td>
        <td><%= time_ago_in_words(wiki.updated_at) %> ago</td>
        <td><%= wiki.updater %></td> 
        <td><%= link_to 'View Collaborators', wiki_collaborators_path(wiki) %></td>
        <td><%= link_to 'Edit', edit_wiki_path(wiki) %></td>
        <td><%= link_to 'Destroy', wiki, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


  <h3> Wikis Shared with Me</h3>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Created By</th>
      <th>Date Created</th>
      <th>Last Updated</th>
      <th>Updated By</th> 
      <th colspan=""></th>
    </tr>
  </thead>

  <tbody>
    <% @collaborations.each do |wiki| %>
      <tr>
        <td><%= link_to wiki.title, wiki %></td>
        <td><%= wiki.user.email %></td>
        <td><%= time_ago_in_words(wiki.created_at) %> ago</td>
        <td><%= time_ago_in_words(wiki.updated_at) %> ago</td>
        <td><%= wiki.updater %></td>
        <td><%= link_to 'Edit', edit_wiki_path(wiki) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Wiki', new_wiki_path, class: 'btn btn-warning' %>