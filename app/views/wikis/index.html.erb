<h1>All wikis</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date Created</th>
      <th>Wiki Creator</th>
      <th>Last Updated</th>
      <th>Updated By</th> 
    </tr>
  </thead>

  <tbody>
    <% @wikis.each do |wiki| %>
      <tr>
        <td><%= link_to wiki.title, wiki %></td>
        <td><%= time_ago_in_words(wiki.created_at) %> ago</td>
        <td><%= wiki.user.email %></td>
        <td><%= time_ago_in_words(wiki.updated_at) %> ago</td>
        <td><%= wiki.updater %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @wikis %>
</br>
<%= link_to 'New Wiki', new_wiki_path, class: 'btn btn-warning' %>